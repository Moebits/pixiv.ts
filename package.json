{
  "name": "pixiv.ts",
  "version": "0.8.3",
  "description": "Wrapper for the Pixiv API with typings",
  "main": "dist/pixiv.js",
  "types": "dist/pixiv.d.ts",
  "exports": {
    "browser": {
      "import": "./dist/pixiv.browser.js",
      "require": "./dist/pixiv.browser.cjs"
    }
  },
  "scripts": {
    "start": "tsc && node dist/start.js",
    "test": "ts-mocha --timeout 30000 -p tsconfig.json test/**/*.spec.ts",
    "docs": "typedoc --out docs ./",
    "browser": "node build.ts",
    "prepublishOnly": "tsc && npm run browser"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Moebytes/pixiv.ts"
  },
  "keywords": [
    "pixiv",
    "typescript",
    "ts",
    "api",
    "anime",
    "art"
  ],
  "author": "Moebytes",
  "license": "MIT",
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@types/archiver": "^6.0.3",
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^24.8.1",
    "@types/unzipper": "^0.10.3",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "esbuild": "^0.25.11",
    "mocha": "^6.2.2",
    "ts-mocha": "^6.0.0",
    "typedoc": "^0.15.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "bing-translate-api": "^2.5.0",
    "get-pixels": "^3.3.2",
    "gif-encoder": "^0.7.2",
    "image-size": "^0.8.3",
    "unzipper": "^0.12.3"
  }
}
